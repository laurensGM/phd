---
import BaseLayout from '../../layouts/BaseLayout.astro';
import models from '../../data/models.json';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Models" description="Theoretical models - TAM, ECT, ECM and more">
  <h1>Models</h1>
  <p class="page-desc">Theoretical models with diagrams, constructs, and citations. Click a card to open the model.</p>

  <div class="models-grid">
    {models.map((model: any) => (
      <article class="model-card">
        <h2><a href={`${base}models/${model.id}/`}>{model.name}</a></h2>
        <span class="abbrev">{model.abbreviation}</span>
        <p class="model-meta">{model.authors.join(', ')} ({model.year})</p>
        <p class="model-desc-teaser">{model.description.slice(0, 160)}{model.description.length > 160 ? '…' : ''}</p>
        <div class="meta">
          <span>Constructs: {model.constructs.slice(0, 4).map((c: string) => model.constructAbbreviations?.[c] || c).join(', ')}{model.constructs.length > 4 ? '…' : ''}</span>
        </div>
      </article>
    ))}
  </div>
</BaseLayout>

<style>
  .page-desc { color: var(--color-ink-muted); margin-bottom: 2rem; }

  .models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .model-card {
    padding: 1.5rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .model-card h2 { margin-top: 0; font-size: 1.25rem; }
  .model-card .abbrev {
    display: inline-block;
    margin-left: 0.5rem;
    padding: 0.15rem 0.5rem;
    background: var(--color-bg-alt);
    font-size: 0.8rem;
    font-weight: 600;
    border-radius: 4px;
  }
  .model-meta { font-size: 0.875rem; color: var(--color-ink-muted); margin: 0.5rem 0; }
  .model-desc-teaser { font-size: 0.9rem; margin: 0.75rem 0; line-height: 1.5; }
  .model-card .meta { font-size: 0.85rem; margin-top: 0.5rem; color: var(--color-ink-muted); }
</style>
