---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ModelsPage from '../../components/ModelsPage';
import models from '../../data/models.json';
import constructs from '../../data/constructs.json';

const base = import.meta.env.BASE_URL;
const constructToSlug: Record<string, string> = {};
constructs.forEach((c: { name: string; id: string }) => {
  constructToSlug[c.name] = c.id;
});
---

<BaseLayout title="Models" description="Theoretical models - TAM, ECT, ECM with interactive diagrams">
  <h1>Models</h1>
  <p class="page-desc">Click a card to open the model and see its diagram, constructs, and citations. For ECM-IS: click a construct in the diagram to see details on the page.</p>

  <ModelsPage client:load models={models} constructToSlug={constructToSlug} base={base} />
</BaseLayout>

<style>
  .page-desc {
    color: var(--color-ink-muted);
    margin-bottom: 2rem;
  }

  .models-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .model-teaser-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.2s, border-color 0.2s;
  }

  .model-teaser-card:hover {
    border-color: var(--color-gold);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .model-teaser-card.expanded {
    border-color: var(--color-maroon);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    grid-column: 1 / -1;
  }

  .model-teaser-header {
    width: 100%;
    padding: 1.25rem 1.5rem;
    text-align: left;
    background: none;
    border: none;
    cursor: pointer;
    font: inherit;
    color: inherit;
    position: relative;
    padding-right: 2.5rem;
  }

  .model-teaser-header:hover {
    background: var(--color-bg);
  }

  .model-teaser-title {
    font-size: 1.1rem;
    margin: 0 0 0.35rem 0;
    line-height: 1.35;
  }

  .model-teaser-abbrev {
    color: var(--color-maroon);
    font-weight: 600;
  }

  .model-teaser-meta {
    font-size: 0.85rem;
    color: var(--color-ink-muted);
    margin: 0 0 0.75rem 0;
  }

  .model-teaser-constructs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .model-teaser-tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--color-bg-alt);
    border-radius: 4px;
    color: var(--color-ink-muted);
  }

  .model-teaser-chevron {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.25rem;
    font-weight: 300;
    color: var(--color-maroon);
  }

  .model-teaser-body {
    padding: 0 1.5rem 1.5rem 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .model-teaser-body .model-desc {
    margin: 1rem 0 1rem 0;
    color: var(--color-ink-muted);
  }

  .model-notes {
    margin: 1rem 0 1.5rem 0;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 8px;
    border-left: 4px solid var(--color-gold);
  }

  .model-notes h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .model-notes-content {
    font-size: 0.9rem;
    color: var(--color-ink);
    line-height: 1.65;
    white-space: pre-line;
  }

  .model-teaser-body h3 {
    font-size: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .model-teaser-body .construct-list,
  .model-teaser-body .relationship-list,
  .model-teaser-body .citations-list {
    line-height: 1.8;
    margin: 0;
    padding-left: 1.25rem;
  }

  .model-teaser-body .construct-list a {
    font-family: var(--font-sans);
  }

  .model-graph-wrapper {
    margin: 1rem 0;
  }

  .model-graph-wrapper :global(.construct-node-link) {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-maroon);
    color: white !important;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .model-graph-wrapper :global(.construct-node-link:hover) {
    background: var(--color-maroon-dark);
    text-decoration: none;
    color: white !important;
  }

  .model-graph-wrapper :global(.react-flow__construct-node) {
    padding: 4px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  /* ECM-IS diagram */
  .ecm-is-diagram {
    margin: 1.5rem 0;
  }

  .ecm-flow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    width: 100%;
    max-width: 1100px;
  }

  .ecm-box {
    background: white;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    text-align: center;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border: 2px solid transparent;
    transition: all 0.2s;
    cursor: pointer;
    min-width: 130px;
    max-width: 150px;
    flex-shrink: 0;
  }

  .ecm-box:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.13);
  }

  .ecm-box-prior { border-color: var(--color-gold); }
  .ecm-box-prior .ecm-box-label { color: var(--color-gold); }
  .ecm-box-confirm { border-color: var(--color-maroon); }
  .ecm-box-confirm .ecm-box-label { color: var(--color-maroon); }
  .ecm-box-satisfy { border-color: var(--color-gold-light); }
  .ecm-box-satisfy .ecm-box-label { color: var(--color-maroon-dark); }
  .ecm-box-intention { border-color: var(--color-maroon); }
  .ecm-box-intention .ecm-box-label { color: var(--color-maroon); }
  .ecm-box-behavior { border-color: var(--color-maroon-dark); }
  .ecm-box-behavior .ecm-box-label { color: var(--color-maroon-dark); }

  .ecm-box-label {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    margin-bottom: 0.35rem;
  }

  .ecm-box-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-bottom: 0.35rem;
    line-height: 1.3;
  }

  .ecm-box-desc {
    font-size: 0.72rem;
    color: var(--color-ink-muted);
    line-height: 1.4;
  }

  .ecm-arrow-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    flex-shrink: 0;
  }

  .ecm-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .ecm-arrow-line {
    width: 36px;
    height: 2px;
    background: var(--color-border);
    position: relative;
  }

  .ecm-arrow-line::after {
    content: '';
    position: absolute;
    right: -6px;
    top: -4px;
    border: 5px solid transparent;
    border-left-color: var(--color-border);
  }

  .ecm-arrow-label {
    font-size: 0.65rem;
    color: var(--color-ink-muted);
    text-align: center;
  }

  .ecm-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-shrink: 0;
  }

  .ecm-note {
    margin-top: 1rem;
    font-size: 0.8rem;
    color: var(--color-maroon);
    text-align: center;
  }

  .ecm-info-panel {
    margin-top: 1.5rem;
    background: white;
    border-radius: 12px;
    padding: 1.25rem 1.75rem;
    max-width: 700px;
    width: 100%;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
    min-height: 80px;
    border: 1px solid var(--color-border);
  }

  .ecm-info-panel h3 {
    font-size: 1rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .ecm-info-panel p {
    font-size: 0.88rem;
    color: var(--color-ink-muted);
    line-height: 1.6;
  }

  .ecm-info-default {
    color: var(--color-ink-muted) !important;
    font-style: italic;
  }

  .ecm-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.25rem;
    justify-content: center;
    font-size: 0.75rem;
    color: var(--color-ink-muted);
  }

  .ecm-legend-dot {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 3px;
    margin-right: 0.35rem;
    vertical-align: middle;
  }

  .ecm-legend-dot.prior { background: var(--color-gold); }
  .ecm-legend-dot.confirm { background: var(--color-maroon); }
  .ecm-legend-dot.satisfy { background: var(--color-gold-light); }
  .ecm-legend-dot.intention { background: var(--color-maroon); }
  .ecm-legend-dot.behavior { background: var(--color-maroon-dark); }
</style>
