---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ModelDetailView from '../../components/ModelDetailView';
import models from '../../data/models.json';
import constructs from '../../data/constructs.json';

export function getStaticPaths() {
  return models.map((m: { id: string }) => ({ params: { id: m.id } }));
}

const { id } = Astro.params;
const base = import.meta.env.BASE_URL;
const model = models.find((m: { id: string }) => m.id === id);
const constructToSlug: Record<string, string> = {};
constructs.forEach((c: { name: string; id: string }) => {
  constructToSlug[c.name] = c.id;
});

if (!model) {
  return Astro.redirect(`${base}models/`);
}
---

<BaseLayout title={model.name} description={model.description}>
  <article class="model-detail-page">
    <a href={`${base}models/`} class="back-link">‚Üê All Models</a>
    <header class="model-detail-header">
      <h1>{model.name} ({model.abbreviation})</h1>
      <p class="model-meta">Developed by: {model.authors.join(', ')} ({model.year})</p>
    </header>

    <ModelDetailView client:load model={model} constructToSlug={constructToSlug} base={base} />
  </article>
</BaseLayout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .model-detail-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .model-detail-header h1 {
    margin: 0 0 0.35rem 0;
  }

  .model-meta {
    font-size: 0.9rem;
    color: var(--color-ink-muted);
    margin: 0;
  }

  .model-detail-view .model-desc {
    margin-bottom: 1rem;
    line-height: 1.65;
    color: var(--color-ink);
  }

  .model-detail-view .model-notes {
    margin: 1rem 0 1.5rem 0;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 8px;
    border-left: 4px solid var(--color-gold);
  }

  .model-detail-view .model-notes h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .model-detail-view .model-notes-content {
    font-size: 0.9rem;
    line-height: 1.65;
    white-space: pre-line;
  }

  .model-detail-view h3 {
    font-size: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .model-detail-view .construct-list,
  .model-detail-view .relationship-list,
  .model-detail-view .citations-list {
    line-height: 1.8;
    margin: 0;
    padding-left: 1.25rem;
  }

  .model-detail-view .construct-list li,
  .model-detail-view .relationship-list li,
  .model-detail-view .citations-list li {
    margin-bottom: 0.35rem;
  }

  .model-graph-wrapper {
    margin: 1rem 0;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg-alt);
    overflow: hidden;
  }

  /* Diagram: clear boxes for constructs, arrows between them */
  .model-diagram-root :global(.model-diagram-box) {
    background: #fff;
    border: 2px solid var(--color-maroon);
    border-radius: 8px;
    padding: 0;
    min-width: 180px;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-sm);
  }

  .model-diagram-root :global(.model-diagram-box-link) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    text-decoration: none;
    color: var(--color-ink);
    width: 100%;
    height: 100%;
    min-height: 56px;
    box-sizing: border-box;
  }

  .model-diagram-root :global(.model-diagram-box-link:hover) {
    background: var(--color-bg);
    color: var(--color-maroon);
    text-decoration: none;
  }

  .model-diagram-root :global(.model-diagram-box-abbrev) {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--color-maroon);
    display: block;
  }

  .model-diagram-root :global(.model-diagram-box-name) {
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    text-align: center;
    line-height: 1.2;
    margin-top: 0.15rem;
    display: block;
  }

  .model-diagram-root :global(.model-diagram-handle) {
    width: 8px;
    height: 8px;
    background: var(--color-maroon);
    border: 2px solid #fff;
  }

  .model-diagram-root :global(.react-flow__edge-path) {
    stroke-width: 2;
  }
</style>
