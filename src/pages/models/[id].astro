---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ModelDetailView from '../../components/ModelDetailView';
import models from '../../data/models.json';
import constructs from '../../data/constructs.json';

export function getStaticPaths() {
  return models.map((m: { id: string }) => ({ params: { id: m.id } }));
}

const { id } = Astro.params;
const base = import.meta.env.BASE_URL;
const model = models.find((m: { id: string }) => m.id === id);
const constructToSlug: Record<string, string> = {};
constructs.forEach((c: { name: string; id: string }) => {
  constructToSlug[c.name] = c.id;
});

if (!model) {
  return Astro.redirect(`${base}models/`);
}
---

<BaseLayout title={model.name} description={model.description}>
  <article class="model-detail-page">
    <a href={`${base}models/`} class="back-link">‚Üê All Models</a>
    <header class="model-detail-header">
      <h1>{model.name} ({model.abbreviation})</h1>
      <p class="model-meta">Developed by: {model.authors.join(', ')} ({model.year})</p>
    </header>

    <ModelDetailView client:load model={model} constructToSlug={constructToSlug} base={base} />
  </article>
</BaseLayout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .model-detail-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .model-detail-header h1 {
    margin: 0 0 0.35rem 0;
  }

  .model-meta {
    font-size: 0.9rem;
    color: var(--color-ink-muted);
    margin: 0;
  }

  .model-detail-view .model-desc {
    margin-bottom: 1rem;
    line-height: 1.65;
    color: var(--color-ink);
  }

  .model-detail-view .model-notes {
    margin: 1rem 0 1.5rem 0;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 8px;
    border-left: 4px solid var(--color-gold);
  }

  .model-detail-view .model-notes h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .model-detail-view .model-notes-content {
    font-size: 0.9rem;
    line-height: 1.65;
    white-space: pre-line;
  }

  .model-detail-view h3 {
    font-size: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .model-detail-view .construct-list,
  .model-detail-view .relationship-list,
  .model-detail-view .citations-list {
    line-height: 1.8;
    margin: 0;
    padding-left: 1.25rem;
  }

  .model-detail-view .construct-list li,
  .model-detail-view .relationship-list li,
  .model-detail-view .citations-list li {
    margin-bottom: 0.35rem;
  }

  .model-graph-wrapper {
    margin: 1rem 0;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg-alt);
    overflow: hidden;
    height: 480px;
  }

  /* React Flow needs its parent to have explicit dimensions */
  .model-graph-wrapper :global(.react-flow) {
    width: 100%;
    height: 100%;
    min-height: 400px;
  }

  .model-graph-wrapper :global(.react-flow__renderer),
  .model-graph-wrapper :global(.react-flow__viewport) {
    width: 100%;
    height: 100%;
  }

  .model-diagram-empty {
    padding: 2rem;
    text-align: center;
    color: var(--color-ink-muted);
  }

  /* Diagram: clear boxes for constructs, arrows between them (global so React-rendered nodes are styled) */
  .model-graph-wrapper :global(.model-diagram-box) {
    background: #fff;
    border: 2px solid var(--color-maroon);
    border-radius: 8px;
    padding: 0;
    min-width: 180px;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-sm);
  }

  .model-graph-wrapper :global(.model-diagram-box-link) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    text-decoration: none;
    color: var(--color-ink);
    width: 100%;
    height: 100%;
    min-height: 56px;
    box-sizing: border-box;
  }

  .model-graph-wrapper :global(.model-diagram-box-link:hover) {
    background: var(--color-bg);
    color: var(--color-maroon);
    text-decoration: none;
  }

  .model-graph-wrapper :global(.model-diagram-box-abbrev) {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--color-maroon);
    display: block;
  }

  .model-graph-wrapper :global(.model-diagram-box-name) {
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    text-align: center;
    line-height: 1.2;
    margin-top: 0.15rem;
    display: block;
  }

  .model-graph-wrapper :global(.model-diagram-handle) {
    width: 8px;
    height: 8px;
    background: var(--color-maroon);
    border: 2px solid #fff;
  }

  .model-graph-wrapper :global(.react-flow__edge-path) {
    stroke-width: 2;
  }

  /* ECM-IS diagram: horizontal flow with boxes and arrows (like reference) */
  .model-detail-view :global(.ecm-diagram-wrap) {
    margin: 1.5rem 0;
    padding: 2rem 1rem;
    background: #f0f4f8;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .model-detail-view :global(.ecm-diagram-title) {
    font-size: 1.4rem;
    color: #1a2e4a;
    margin-bottom: 6px;
    text-align: center;
  }

  .model-detail-view :global(.ecm-diagram-subtitle) {
    font-size: 0.85rem;
    color: #5a7a9a;
    margin-bottom: 2rem;
    text-align: center;
  }

  .model-detail-view :global(.ecm-diagram) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    flex-wrap: nowrap;
    width: 100%;
    max-width: 1100px;
    overflow-x: auto;
    padding: 0.5rem 0;
  }

  .model-detail-view :global(.ecm-box) {
    background: white;
    border-radius: 12px;
    padding: 18px 16px;
    text-align: center;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    border: 2px solid transparent;
    transition: all 0.2s;
    cursor: pointer;
    min-width: 130px;
    max-width: 150px;
    flex-shrink: 0;
    text-decoration: none;
    color: inherit;
  }

  .model-detail-view :global(.ecm-box:hover) {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.13);
    text-decoration: none;
    color: inherit;
  }

  .model-detail-view :global(.ecm-box .ecm-box-label) {
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    margin-bottom: 6px;
  }

  .model-detail-view :global(.ecm-box .ecm-box-name) {
    font-size: 0.92rem;
    font-weight: 600;
    color: #1a2e4a;
    margin-bottom: 6px;
    line-height: 1.3;
  }

  .model-detail-view :global(.ecm-box .ecm-box-desc) {
    font-size: 0.72rem;
    color: #6b8aaa;
    line-height: 1.4;
  }

  .model-detail-view :global(.ecm-box.prior) { border-color: #7c3aed; }
  .model-detail-view :global(.ecm-box.prior .ecm-box-label) { color: #7c3aed; }
  .model-detail-view :global(.ecm-box.confirm) { border-color: #0ea5e9; }
  .model-detail-view :global(.ecm-box.confirm .ecm-box-label) { color: #0ea5e9; }
  .model-detail-view :global(.ecm-box.satisfy) { border-color: #10b981; }
  .model-detail-view :global(.ecm-box.satisfy .ecm-box-label) { color: #10b981; }
  .model-detail-view :global(.ecm-box.intention) { border-color: #f59e0b; }
  .model-detail-view :global(.ecm-box.intention .ecm-box-label) { color: #f59e0b; }
  .model-detail-view :global(.ecm-box.behavior) { border-color: #ef4444; }
  .model-detail-view :global(.ecm-box.behavior .ecm-box-label) { color: #ef4444; }

  .model-detail-view :global(.ecm-arrow-group) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .model-detail-view :global(.ecm-arrow) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .model-detail-view :global(.ecm-arrow-line) {
    width: 48px;
    height: 2px;
    background: #94a3b8;
    position: relative;
  }

  .model-detail-view :global(.ecm-arrow-line::after) {
    content: '';
    position: absolute;
    right: -6px;
    top: -4px;
    border: 5px solid transparent;
    border-left-color: #94a3b8;
  }

  .model-detail-view :global(.ecm-arrow-label) {
    font-size: 0.65rem;
    color: #94a3b8;
    text-align: center;
    max-width: 60px;
    line-height: 1.2;
    margin-top: 2px;
  }

  .model-detail-view :global(.ecm-multi-arrow) {
    display: flex;
    flex-direction: column;
    gap: 18px;
    align-items: center;
  }

  .model-detail-view :global(.ecm-box-stack) {
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-shrink: 0;
  }

  .model-detail-view :global(.ecm-box-stack .ecm-box) {
    max-width: 150px;
  }

  .model-detail-view :global(.ecm-note-line) {
    margin-top: 14px;
    font-size: 0.75rem;
    color: #0ea5e9;
    text-align: center;
  }

  .model-detail-view :global(.ecm-tooltip-area) {
    margin-top: 28px;
    background: white;
    border-radius: 12px;
    padding: 20px 28px;
    max-width: 700px;
    width: 100%;
    box-shadow: 0 2px 12px rgba(0,0,0,0.07);
    min-height: 80px;
  }

  .model-detail-view :global(.ecm-tooltip-area h3) {
    font-size: 0.95rem;
    color: #1a2e4a;
    margin-bottom: 6px;
  }

  .model-detail-view :global(.ecm-tooltip-area p) {
    font-size: 0.82rem;
    color: #5a7a9a;
    line-height: 1.6;
  }

  .model-detail-view :global(.ecm-tooltip-default) {
    color: #94a3b8;
    font-style: italic;
    font-size: 0.82rem;
    margin: 0;
  }

  .model-detail-view :global(.ecm-legend) {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 28px;
    justify-content: center;
  }

  .model-detail-view :global(.ecm-legend-item) {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.75rem;
    color: #4a6a8a;
  }

  .model-detail-view :global(.ecm-legend-dot) {
    width: 12px;
    height: 12px;
    border-radius: 3px;
    display: inline-block;
  }

  .model-detail-view :global(.ecm-legend-dot.prior) { background: #7c3aed; }
  .model-detail-view :global(.ecm-legend-dot.confirm) { background: #0ea5e9; }
  .model-detail-view :global(.ecm-legend-dot.satisfy) { background: #10b981; }
  .model-detail-view :global(.ecm-legend-dot.intention) { background: #f59e0b; }
  .model-detail-view :global(.ecm-legend-dot.behavior) { background: #ef4444; }

  .model-detail-view :global(.ecm-source-note) {
    margin-top: 28px;
    font-size: 0.75rem;
    color: #94a3b8;
    text-align: center;
  }

  /* Generic static diagram (other models) */
  .model-detail-view :global(.static-diagram) {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .model-detail-view :global(.static-diagram-hint) {
    font-size: 0.875rem;
    color: var(--color-ink-muted);
    margin: 0 0 1rem 0;
  }

  .model-detail-view :global(.static-diagram-flow) {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem 1rem;
  }

  .model-detail-view :global(.static-diagram-box) {
    display: flex;
    flex-direction: column;
    padding: 0.75rem 1rem;
    min-width: 180px;
    background: #fff;
    border-radius: 10px;
    border: 2px solid var(--color-border);
    text-decoration: none;
    color: var(--color-ink);
    box-shadow: var(--shadow-sm);
  }

  .model-detail-view :global(.static-diagram-box:hover) {
    border-color: var(--color-gold);
    text-decoration: none;
    color: var(--color-ink);
  }

  .model-detail-view :global(.static-diagram-box-prior) { border-color: var(--color-maroon-muted); }
  .model-detail-view :global(.static-diagram-box-postuse) { border-color: #6B9AC4; }
  .model-detail-view :global(.static-diagram-box-affective) { border-color: var(--color-gold); }
  .model-detail-view :global(.static-diagram-box-intention) { border-color: var(--color-gold-dark); }
  .model-detail-view :global(.static-diagram-box-behavior) { border-color: var(--color-maroon); }
  .model-detail-view :global(.static-diagram-box-generic) { border-color: var(--color-maroon); }

  .model-detail-view :global(.static-diagram-box-label) {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: var(--color-ink-muted);
    margin-bottom: 0.25rem;
  }

  .model-detail-view :global(.static-diagram-box-name) {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-ink);
  }

  .model-detail-view :global(.static-diagram-box-desc) {
    font-size: 0.8rem;
    color: var(--color-ink-muted);
    margin-top: 0.25rem;
  }

  .model-detail-view :global(.static-diagram-box-abbrev) {
    font-weight: 700;
    font-size: 0.9rem;
    color: var(--color-maroon);
  }

  .model-detail-view :global(.static-diagram-stack) {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .model-detail-view :global(.static-diagram-arrows-row) {
    display: flex;
    gap: 1rem;
  }

  .model-detail-view :global(.static-diagram-arrow-wrap) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .model-detail-view :global(.static-diagram-arrow-label) {
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    font-style: italic;
  }

  .model-detail-view :global(.static-diagram-arrow) {
    color: var(--color-maroon);
    font-size: 1.25rem;
  }

  .model-detail-view :global(.static-diagram-note) {
    margin: 1.25rem 0 0 0;
    padding: 0.75rem 1rem;
    background: #fff;
    border-left: 4px solid var(--color-gold);
    border-radius: 6px;
    font-size: 0.9rem;
  }

  .model-detail-view :global(.static-diagram-legend) {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
    font-size: 0.8rem;
    color: var(--color-ink-muted);
  }

  .model-detail-view :global(.static-diagram-legend-dot) {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 2px;
    margin-right: 0.35rem;
    vertical-align: middle;
  }

  .model-detail-view :global(.static-diagram-legend-dot.prior) { background: var(--color-maroon-muted); }
  .model-detail-view :global(.static-diagram-legend-dot.postuse) { background: #6B9AC4; }
  .model-detail-view :global(.static-diagram-legend-dot.affective) { background: var(--color-gold); }
  .model-detail-view :global(.static-diagram-legend-dot.intention) { background: var(--color-gold-dark); }
  .model-detail-view :global(.static-diagram-legend-dot.behavior) { background: var(--color-maroon); }

  .model-detail-view :global(.static-diagram-generic-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }

  .model-detail-view :global(.static-diagram-relationships) {
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .model-detail-view :global(.static-diagram-relationships h4) {
    font-size: 0.95rem;
    margin: 0 0 0.5rem 0;
  }

  .model-detail-view :global(.static-diagram-relationships ul) {
    margin: 0;
    padding-left: 1.25rem;
    line-height: 1.8;
  }
</style>
