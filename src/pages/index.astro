<style>
  .homepage {
    max-width: 720px;
  }

  .tagline {
    font-size: 1.1rem;
    color: var(--color-ink-muted);
    margin-bottom: 2rem;
  }

  .positioning {
    margin-bottom: 2.5rem;
  }

  .research-topic {
    font-family: var(--font-serif);
    font-size: 1.15rem;
    font-style: italic;
    margin-bottom: 1rem;
  }

  .positioning-statement {
    color: var(--color-ink-muted);
  }

  .link-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1rem;
  }

  .link-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: box-shadow 0.2s, transform 0.2s;
  }

  .link-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
    text-decoration: none;
    color: inherit;
  }

  .link-icon {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .link-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .link-desc {
    font-size: 0.875rem;
    color: var(--color-ink-muted);
  }
</style>
