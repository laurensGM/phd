---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "PhD Operating System - Organizing research, models, constructs, and literature" } = Astro.props;
const base = import.meta.env.BASE_URL;
// Home link: use path-relative URL so it always resolves to this app's root (avoids going to portfolio when base is wrong)
const pathname = (Astro.url.pathname || '/').replace(/\/$/, '') || '/';
const pathSegments = pathname.split('/').filter(Boolean);
const baseSegments = base.replace(/\/$/, '').split('/').filter(Boolean);
const baseDepth = baseSegments.length;
const upLevels = Math.max(0, pathSegments.length - baseDepth);
const homeHref = upLevels === 0 ? (base || './') : '../'.repeat(upLevels);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="description" content={description} />
    <title>{title} | PhD Operating System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,600;1,400&family=DM+Sans:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav-container">
        <a href={homeHref} class="logo" rel="home" aria-label="Home – PhD Operating System">
          <img src={`${base}logo-pos.jpeg`} alt="PhD Operating System" class="logo-img" width="40" height="40" />
          <span class="logo-text">PhD Operating System</span>
        </a>
        <ul class="nav-links">
          <li><a href={`${base}models/`}>Models</a></li>
          <li><a href={`${base}constructs/`}>Constructs</a></li>
          <li><a href={`${base}diary/`}>Diary</a></li>
          <li><a href={`${base}literature/`}>Literature</a></li>
          <li><a href={`${base}research-questions/`}>Research Questions</a></li>
          <li><a href={`${base}methods/`}>Methods</a></li>
          <li><a href={`${base}theory-map/`}>Theory Map</a></li>
          <li><a href={`${base}supervisor/`}>Supervisor</a></li>
        </ul>
      </nav>
    </header>
    <main class="main-content">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="footer-brand">
        <img src={`${base}logo-pos.jpeg`} alt="PhD Operating System" class="footer-logo" width="32" height="32" />
        <div>
          <p class="footer-title">PhD Operating System</p>
          <p class="footer-university">Stellenbosch University</p>
        </div>
      </div>
      <p class="footer-tagline">Organizing research one note at a time</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Stellenbosch Business School branding (aligned with logo) */
    --color-bg: #F8F5F2;
    --color-bg-alt: #EDE8E2;
    --color-ink: #2D1F24;
    --color-ink-muted: #5C4A4F;
    --color-maroon: #622130;
    --color-maroon-dark: #4A1925;
    --color-maroon-muted: #9C416B;
    --color-gold: #D4AF37;
    --color-gold-light: #E5C65C;
    --color-gold-dark: #8B704C;
    --color-accent: #622130;
    --color-accent-hover: #4A1925;
    --color-border: #E0D6CC;
    --font-serif: 'Crimson Pro', Georgia, serif;
    --font-sans: 'DM Sans', system-ui, sans-serif;
    --shadow-sm: 0 1px 3px rgba(45, 31, 36, 0.06);
    --shadow-md: 0 4px 12px rgba(45, 31, 36, 0.08);
  }

  * {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-ink);
    background: var(--color-bg);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .site-header {
    background: var(--color-maroon);
    color: white;
    padding: 0.75rem 1.5rem;
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 3px solid var(--color-gold);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
    text-decoration: none;
    padding: 0.4rem 0.65rem;
    border-radius: 6px;
    transition: color 0.2s ease, background 0.2s ease;
  }

  .logo:hover {
    color: var(--color-gold-light);
    background: rgba(255, 255, 255, 0.12);
    text-decoration: none;
  }

  .logo:hover .logo-img {
    opacity: 0.95;
  }

  .logo-img {
    flex-shrink: 0;
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .logo-text {
    white-space: nowrap;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    flex: 1;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.92);
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.4rem 0.65rem;
    border-radius: 6px;
    transition: color 0.2s ease, background 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--color-gold-light);
    background: rgba(255, 255, 255, 0.12);
    text-decoration: none;
  }

  .main-content {
    flex: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    width: 100%;
  }

  .site-footer {
    background: var(--color-maroon);
    color: var(--color-gold-light);
    padding: 1.25rem 1.5rem;
    text-align: center;
    font-size: 0.85rem;
    border-top: 3px solid var(--color-gold);
  }

  .footer-brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .footer-logo {
    opacity: 0.95;
  }

  .footer-title {
    font-weight: 600;
    margin: 0;
    font-size: 0.95rem;
    color: #fff;
  }

  .footer-university {
    margin: 0.15rem 0 0 0;
    font-size: 0.75rem;
    color: var(--color-gold-light);
    letter-spacing: 0.02em;
  }

  .footer-tagline {
    margin: 0;
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.8rem;
  }

  h1, h2, h3 {
    font-family: var(--font-serif);
  }

  h1 { font-size: 2.25rem; margin-bottom: 0.5rem; }
  h2 { font-size: 1.5rem; margin-top: 2rem; margin-bottom: 0.75rem; }
  h3 { font-size: 1.2rem; margin-top: 1.5rem; margin-bottom: 0.5rem; }

  a {
    color: var(--color-maroon);
    text-decoration: none;
  }

  a:hover {
    color: var(--color-maroon-dark);
    text-decoration: underline;
  }

  /* Primary buttons: maroon with gold accent */
  button.diary-add-btn,
  button.diary-submit,
  .link-card {
    border: 1px solid transparent;
  }
  button.diary-add-btn,
  button.diary-submit {
    box-shadow: 0 0 0 1px var(--color-gold);
  }

  @media (max-width: 768px) {
    .nav-links {
      flex-wrap: wrap;
      gap: 0.75rem;
    }
  }

  /* ECM-IS diagram (on-brand: page background, maroon/gold palette) */
  .ecm-diagram-wrap {
    margin: 1.5rem 0;
    padding: 2rem 1rem;
    background: var(--color-bg);
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .ecm-diagram-title {
    font-size: 1.4rem;
    color: var(--color-ink);
    margin-bottom: 6px;
    text-align: center;
  }
  .ecm-diagram-subtitle {
    font-size: 0.85rem;
    color: var(--color-ink-muted);
    margin-bottom: 2rem;
    text-align: center;
  }
  .ecm-diagram {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    flex-wrap: nowrap;
    width: 100%;
    max-width: 1100px;
    overflow-x: auto;
    padding: 0.5rem 0;
  }
  .ecm-box {
    background: #fff;
    border-radius: 12px;
    padding: 18px 16px;
    text-align: center;
    box-shadow: var(--shadow-sm);
    border: 2px solid transparent;
    transition: all 0.2s;
    cursor: pointer;
    min-width: 130px;
    max-width: 150px;
    flex-shrink: 0;
    text-decoration: none;
    color: inherit;
  }
  .ecm-box:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    color: inherit;
  }
  .ecm-box .ecm-box-label {
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    margin-bottom: 6px;
  }
  .ecm-box .ecm-box-name {
    font-size: 0.92rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-bottom: 6px;
    line-height: 1.3;
  }
  .ecm-box .ecm-box-desc {
    font-size: 0.72rem;
    color: var(--color-ink-muted);
    line-height: 1.4;
  }
  .ecm-box.prior { border-color: var(--color-maroon-muted); }
  .ecm-box.prior .ecm-box-label { color: var(--color-maroon-muted); }
  .ecm-box.confirm { border-color: var(--color-gold-dark); }
  .ecm-box.confirm .ecm-box-label { color: var(--color-gold-dark); }
  .ecm-box.satisfy { border-color: var(--color-gold); }
  .ecm-box.satisfy .ecm-box-label { color: var(--color-gold); }
  .ecm-box.intention { border-color: var(--color-gold-light); }
  .ecm-box.intention .ecm-box-label { color: var(--color-gold-dark); }
  .ecm-box.behavior { border-color: var(--color-maroon); }
  .ecm-box.behavior .ecm-box-label { color: var(--color-maroon); }
  /* Generic model diagram (TAM2, UTAUT, etc.) – same box styling with category colors */
  .ecm-box.ecm-box--social { border-color: var(--color-maroon-muted); }
  .ecm-box.ecm-box--social .ecm-box-label { color: var(--color-maroon-muted); }
  .ecm-box.ecm-box--cognitive { border-color: var(--color-gold-dark); }
  .ecm-box.ecm-box--cognitive .ecm-box-label { color: var(--color-gold-dark); }
  .ecm-box.ecm-box--neutral { border-color: var(--color-border); }
  .ecm-box.ecm-box--neutral .ecm-box-label { color: var(--color-ink-muted); }
  .ecm-arrow-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .ecm-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }
  .ecm-arrow-line {
    width: 48px;
    height: 2px;
    background: var(--color-ink-muted);
    position: relative;
  }
  .ecm-arrow-line::after {
    content: '';
    position: absolute;
    right: -6px;
    top: -4px;
    border: 5px solid transparent;
    border-left-color: var(--color-ink-muted);
  }
  .ecm-arrow-label {
    font-size: 0.65rem;
    color: var(--color-ink-muted);
    text-align: center;
    max-width: 60px;
    line-height: 1.2;
    margin-top: 2px;
  }
  .ecm-multi-arrow {
    display: flex;
    flex-direction: column;
    gap: 18px;
    align-items: center;
  }
  .ecm-box-stack {
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-shrink: 0;
  }
  .ecm-box-stack .ecm-box {
    max-width: 150px;
  }
  .ecm-note-line {
    margin-top: 14px;
    font-size: 0.75rem;
    color: var(--color-maroon);
    text-align: center;
  }
  .ecm-tooltip-area {
    margin-top: 28px;
    background: var(--color-bg-alt);
    border-radius: 12px;
    padding: 20px 28px;
    max-width: 700px;
    width: 100%;
    box-shadow: var(--shadow-sm);
    min-height: 80px;
    border-left: 4px solid var(--color-gold);
  }
  .ecm-tooltip-area h3 {
    font-size: 0.95rem;
    color: var(--color-ink);
    margin-bottom: 6px;
  }
  .ecm-tooltip-area p {
    font-size: 0.82rem;
    color: var(--color-ink-muted);
    line-height: 1.6;
  }
  .ecm-tooltip-default {
    color: var(--color-ink-muted);
    font-style: italic;
    font-size: 0.82rem;
    margin: 0;
  }
  .ecm-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 28px;
    justify-content: center;
  }
  .ecm-legend-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.75rem;
    color: var(--color-ink-muted);
  }
  .ecm-legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
    display: inline-block;
  }
  .ecm-legend-dot.prior { background: var(--color-maroon-muted); }
  .ecm-legend-dot.confirm { background: var(--color-gold-dark); }
  .ecm-legend-dot.satisfy { background: var(--color-gold); }
  .ecm-legend-dot.intention { background: var(--color-gold-light); }
  .ecm-legend-dot.behavior { background: var(--color-maroon); }
  .ecm-legend-dot.ecm-legend-dot--social { background: var(--color-maroon-muted); }
  .ecm-legend-dot.ecm-legend-dot--cognitive { background: var(--color-gold-dark); }
  .ecm-source-note {
    margin-top: 28px;
    font-size: 0.75rem;
    color: var(--color-ink-muted);
    text-align: center;
  }
</style>
